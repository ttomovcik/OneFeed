<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Feed">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/title_feed"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="36sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:foregroundGravity="center_horizontal"
        app:alignContent="center"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_between">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_facebook"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_cloud_off_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorIcons"
            android:focusable="true"
            android:text="@string/social_facebook"
            android:textAllCaps="false"
            android:textColor="@color/colorTextPrimary"
            tools:targetApi="m" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_twitter"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_cloud_off_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorIcons"
            android:focusable="true"
            android:text="@string/social_twitter"
            android:textAllCaps="false"
            android:textColor="@color/colorTextPrimary"
            tools:targetApi="m" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_reddit"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_cloud_off_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorIcons"
            android:focusable="true"
            android:text="@string/social_reddit"
            android:textAllCaps="false"
            android:textColor="@color/colorTextPrimary"
            tools:targetApi="m" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_devrant"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_cloud_off_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorIcons"
            android:focusable="true"
            android:text="@string/social_devRant"
            android:textAllCaps="false"
            android:textColor="@color/colorTextPrimary"
            tools:targetApi="m" />

    </com.google.android.flexbox.FlexboxLayout>

    <WebView
        android:id="@+id/wv_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_accounts"
        android:scrollbars="none"
        android:visibility="gone" />

</RelativeLayout>