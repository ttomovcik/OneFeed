<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/title_home"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="36sp" />

    <!-- Profile information -->
    <RelativeLayout
        android:id="@+id/rl_aboutYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="24dp"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_titleAboutYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_cat_aboutYou"
            android:textColor="@color/colorTextSecondary" />

        <ImageView
            android:id="@+id/iv_aboutYou_profilePicture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/tv_titleAboutYou"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/contentDescription_image"
            android:src="@mipmap/ic_launcher"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_aboutYou_profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_aboutYou_profilePicture"
            android:layout_toEndOf="@id/iv_aboutYou_profilePicture"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_welcomeMsg_hiThere"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_aboutYou_profileHelpMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_aboutYou_profileName"
            android:layout_alignStart="@id/tv_aboutYou_profileName"
            android:fontFamily="@font/poppins"
            android:text="@string/subtitle_welcomeMsg_changeName"
            android:textColor="@color/colorTextSecondary" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_troubleshooting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_aboutYou"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tv_titleTroubleshooting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_cat_troubleshooting"
            android:textColor="@color/colorTextSecondary" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fl_troubleshooting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titleTroubleshooting"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foregroundGravity="center_horizontal"
            app:alignContent="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="space_around">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_help_connectingAccounts"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableTop="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorIcons"
                android:focusable="true"
                android:text="@string/btn_help_connectingAccounts"
                android:textAllCaps="false"
                android:textColor="@color/colorTextPrimary"
                tools:targetApi="m" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_help_appCrash"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableTop="@drawable/ic_error_outline_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorIcons"
                android:focusable="true"
                android:text="@string/btn_help_appCrash"
                android:textAllCaps="false"
                android:textColor="@color/colorTextPrimary"
                tools:targetApi="m" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acb_help_help"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableTop="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorIcons"
                android:focusable="true"
                android:text="@string/btn_help_help"
                android:textAllCaps="false"
                android:textColor="@color/colorTextPrimary"
                tools:targetApi="m" />

        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        app:flexDirection="row"
        app:justifyContent="center">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/contentDescription_image"
            android:src="@drawable/app_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="@string/app_version"
            android:textColor="@color/colorTextSecondary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>